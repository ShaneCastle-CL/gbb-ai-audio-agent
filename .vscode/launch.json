{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach",
            "port": 5173,
            "request": "attach",
            "skipFiles": [
            ],
            "type": "node"
        },

        {
            "name": "Launch edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/usecases/browser_RTMedAgent",
        },

        { // Added React Debug Configuration
            "name": "React App: Browser Debug",
            "type": "msedge", // or "chrome"
            "request": "launch",
            "url": "http://localhost:5173", // Ensure this matches your Vite dev server port
            "webRoot": "${workspaceFolder}/usecases/browser_RTMedAgent/frontend",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/src/*",
                "webpack:///src/*": "${webRoot}/src/*",
                "webpack:///*": "*",
                "webpack:///./*": "${webRoot}/*",
                "meteor://app/*": "${webRoot}/*"
            }
        },

        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "usecases.browser_RTMedAgent.backend.server:app",
                "--reload",
                "--port",
                "8010"
            ],
            "jinja": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "envFile": "${workspaceFolder}/.env"
        },

    ],
    "compounds": [
        {
            "name": "Full Stack: Backend + Frontend",
            "configurations": ["Python Debugger: FastAPI", "React App: Browser Debug"]
        }
    ]
}