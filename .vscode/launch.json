    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/app/frontend-jin/realtime-voice-client",
        },


        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.backend.server:app",
                "--reload",
                "--port",
                "8010"
            ],
            "jinja": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "envFile": "${workspaceFolder}/.env"
        },

    ],
    "compounds": [
        {
            "name": "Full Stack: Backend + Frontend",
            "configurations": ["Python Debugger: FastAPI", "React App: Browser"]
        }
    ]
}